<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="Academy\Lesson9\Block\Widget\Posts" id="academy_lesson9_posts">
        <label>My Widget</label>
        <description>That explains that.</description>
        <parameters>
            <parameter name="select_product" xsi:type="block" visible="true" sort_order="10">
                <label>Select Product</label>
                <block class="Magento\Catalog\Block\Adminhtml\Product\Widget\Chooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string">Select</item>
                        </item>
                    </data>
                </block>
            </parameter>
            <parameter name="condition" xsi:type="conditions" visible="true" sort_order="20" class="Magento\CatalogWidget\Block\Product\Widget\Conditions">
                <label>Choose products...</label>
            </parameter>
            <parameter name="some_title" xsi:type="text" visible="true" sort_order="1" required="true">
                <label>Some Title</label>
                <description>Description</description>
            </parameter>
            <parameter name="some_text" xsi:type="text" visible="true" sort_order="1" required="true">
                <label>Some Text</label>
            </parameter>
            <parameter name="select_one" xsi:type="select" visible="true" sort_order="30">
                <label>Select something for the 1st time.</label>
                <options>
                    <option name="default" value="1">
                        <label>One item</label>
                    </option>
                    <option name="link_inline" value="2" selected="true">
                        <label>Two item</label>
                    </option>
                </options>
            </parameter>
            <parameter name="select_two" xsi:type="select" source_model="Magento\Config\Model\Config\Source\Yesno" sort_order="40">
                <label>Yes or no?</label>
            </parameter>
            <parameter name="multiselect" xsi:type="multiselect" visible="true" sort_order="50">
                <label>Select several.</label>
                <options>
                    <option name="one" value="one">
                        <label>One</label>
                    </option>
                    <option name="two" value="two">
                        <label>Two</label>
                    </option>
                    <option name="three" value="three">
                        <label>Three</label>
                    </option>
                    <option name="four" value="four">
                        <label>Four</label>
                    </option>
                    <option name="five" value="five">
                        <label>Five</label>
                    </option>
                </options>
            </parameter>
        </parameters>
        <containers>
            <container name="content">
                <template name="grid" value="default"/>
            </container>
            <container name="content.top">
                <template name="grid" value="default"/>
            </container>
            <container name="content.bottom">
                <template name="grid" value="default"/>
            </container>
        </containers>
    </widget>
</widgets>